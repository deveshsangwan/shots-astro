---
import { siteConfig } from "@/config/site";

const social = [
  { href: siteConfig.social.instagram, label: "Instagram" },
  { href: siteConfig.social.twitter, label: "Twitter" },
  { href: siteConfig.social.linkedin, label: "LinkedIn" },
  { href: siteConfig.social.github, label: "GitHub" }
];
---

<footer class="border-t border-white/10 bg-surface/40">
  <div class="mx-auto grid w-full max-w-7xl gap-6 px-5 py-12 md:grid-cols-[1.6fr_1fr] md:px-8">
    <div class="space-y-3">
      <p class="font-display text-2xl text-text">{siteConfig.footer.name}</p>
      <p class="max-w-2xl text-sm leading-7 text-muted">{siteConfig.footer.bio}</p>
    </div>
    <div class="space-y-3">
      <p class="text-sm font-semibold tracking-[0.2em] text-muted uppercase">Follow</p>
      <div class="flex flex-wrap gap-2">
        {social.map((item) => (
          <a
            class="rounded-full border border-white/15 px-4 py-2 text-sm text-muted transition-colors hover:border-accent/40 hover:text-accent"
            href={item.href}
            target="_blank"
            rel="noreferrer"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
